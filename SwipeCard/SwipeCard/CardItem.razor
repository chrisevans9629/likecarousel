<div class="swipecard">
    @ChildContent
</div>
@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [CascadingParameter]
    private SwipeCardList? Parent { get; set; }

    protected override void OnInitialized()
    {
        if (Parent == null)
        {
            throw new Exception("must be in swipe card list");
        }
        Parent.AddCard(this);
        base.OnInitialized();
    }
}
